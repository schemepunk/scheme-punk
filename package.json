{
  "name": "scheme-punk",
  "description": "Transformation tool with pluggable sources, transformations, and destinations.",
  "main": "lib/schemePunk.js",
  "scripts": {
    "lint": "eslint .",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post",
    "test": "jest --coverage",
    "test-ci": "jest --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thebruce/scheme-punk.git"
  },
  "keywords": [
    "Schema",
    "transformation",
    "json"
  ],
  "author": "David Diers <david.diers@gmail.com> (http://daviddiers.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebruce/scheme-punk/issues"
  },
  "homepage": "https://github.com/thebruce/scheme-punk#readme",
  "devDependencies": {
    "coveralls": "^2.11.15",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-find-rules": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-environment-node-debug": "^2.0.0",
    "npm-run-all": "^4.0.1",
    "semantic-release": "^7.0.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "ajv": "^6.1.1",
    "callsite": "^1.0.0",
    "config": "^1.24.0",
    "fs-extra": "^4.0.1",
    "lodash": "^4.16.4",
    "molotov": "1.1.0",
    "mustache": "^2.3.0",
    "require-directory": "^2.1.1",
    "try-require": "^1.2.1"
  },
  "engines": {
    "node": ">=4"
  },
  "jest": {
    "cacheDirectory": ".tmp/jest_cache",
    "coverageDirectory": "__coverage__",
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/__helpers__/",
      "<rootDir>/__tests__/.*/[__mocks__|files]/"
    ]
  }
}
